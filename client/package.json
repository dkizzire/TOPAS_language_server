{
	"name": "topas-language-server",
	"displayName": "TOPAS Language Support",
	"description": "TOPAS Language Support",
	"author": "Dayton Kizzire",
	"license": "MIT",
	"version": "0.0.1",
	"publisher": "dayton-kizzire",
	"repository": {
		"type": "git",
		"url": "https://github.com/dkizzire/TOPAS_language_server"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"scripts": {},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0"
	},
	"contributes": {
  		"grammars": [
			{
			"language": "topas",
			"scopeName": "source.topas",
			"path": "./syntaxes/macro.tmLanguage.json"
			}
  		],
  		"languages": [
			{
			"id": "topas",
			"aliases": ["Topas", "topas"],
			"extensions": [".inp", ".out", ".inc", ".str"],
			"configuration": "./language-configuration.json"
			}
		],
		"semanticTokenTypes": [
		  { "id": "variable", "superType": "variable" },
		  { "id": "function", "superType": "function" },
		  { "id": "parameter", "superType": "parameter" },
		  { "id": "keyword", "superType": "keyword" },
		  { "id": "operator", "superType": "operator" },
		  { "id": "macro", "superType": "macro" }
		],
		"semanticTokenModifiers": [
		  { "id": "declaration" },
		  { "id": "readonly" }
		]
	}
}
